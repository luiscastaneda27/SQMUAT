<?xml version="1.0" encoding="UTF-8"?>
<QuickAction xmlns="http://soap.sforce.com/2006/04/metadata">
    <fieldOverrides>
        <field>AccountId</field>
        <formula>Contract.Account.Id</formula>
    </fieldOverrides>
    <fieldOverrides>
        <field>CloseDate</field>
        <formula>TODAY()</formula>
    </fieldOverrides>
    <fieldOverrides>
        <field>Market__c</field>
        <formula>IF(TEXT(Contract.Account.Territory__c) = &quot;ASOC&quot;, &quot;Asia&quot;, IF(TEXT(Contract.Account.Territory__c) = &quot;Japan&quot;, &quot;Asia&quot;, IF(TEXT(Contract.Account.Territory__c) = &quot;LATAM&quot;, &quot;NAFTA&quot;, IF(TEXT(Contract.Account.Territory__c) = &quot;NAFTA&quot;, &quot;NAFTA&quot;, IF(TEXT(Contract.Account.Territory__c) = &quot;China&quot;, &quot;China&quot;, IF(TEXT(Contract.Account.Territory__c) = &quot;EMEAI&quot;, &quot;EMEAI&quot;, &quot;false&quot;))))))</formula>
    </fieldOverrides>
    <fieldOverrides>
        <field>Name</field>
        <formula>TEXT(YEAR(TODAY())) &amp;&quot; - &quot;&amp; TEXT(MONTH(TODAY())) &amp;&quot; - &quot;&amp; Contract.Account.Name</formula>
    </fieldOverrides>
    <fieldOverrides>
        <field>Product__c</field>
        <formula>TEXT(Contract.Account.Product__c)</formula>
    </fieldOverrides>
    <fieldOverrides>
        <field>Quality_Grade__c</field>
        <formula>TEXT(Contract.Account.Quality_Grade__c)</formula>
    </fieldOverrides>
    <fieldOverrides>
        <field>StageName</field>
        <literalValue>Qualification</literalValue>
    </fieldOverrides>
    <fieldOverrides>
        <field>Total_Volume__c</field>
        <formula>Contract.Contracted_volume__c</formula>
    </fieldOverrides>
    <fieldOverrides>
        <field>Type_of_Negotiation__c</field>
        <literalValue>Contract</literalValue>
    </fieldOverrides>
    <label>New Opportunity</label>
    <optionsCreateFeedItem>true</optionsCreateFeedItem>
