<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Sample_Request_Greater_than_zero</fullName>
    <active>true</active>
    <errorConditionFormula>AND(isCHANGED(Status), NOT(ISPICKVAL(Status, &apos;New&apos;)) , Number_of_Sample_Request__c = 0, RecordType.DeveloperName = &apos;Sample_Request&apos;)</errorConditionFormula>
    <errorMessage>Case needs at least one Sample Request to Change Status.</errorMessage>
</ValidationRule>
