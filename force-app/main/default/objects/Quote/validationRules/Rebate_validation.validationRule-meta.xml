<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Rebate_validation</fullName>
    <active>true</active>
    <description>Validación para descripción de rebate cuando checkbox está activo</description>
    <errorConditionFormula>AND(Rebate__c = true, ISBLANK(Rebate_Description__c))</errorConditionFormula>
    <errorDisplayField>Rebate_Description__c</errorDisplayField>
    <errorMessage>Please, complete the rebate description.</errorMessage>
</ValidationRule>
