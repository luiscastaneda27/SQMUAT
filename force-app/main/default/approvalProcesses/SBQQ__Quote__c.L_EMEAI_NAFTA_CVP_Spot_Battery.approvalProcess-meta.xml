<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Date_submit__c</field>
        <field>Created_Date__c</field>
        <field>Opportunity_Grades__c</field>
        <field>Owner</field>
        <field>Volume__c</field>
        <field>SBQQ__Account__c</field>
        <field>SBQQ__NetAmount__c</field>
        <field>Type_of_Opportunity__c</field>
        <field>Average_Price__c</field>
        <field>Incoterm__c</field>
        <field>Price_is_valid_until__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>pieter.schepmans@sqm.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Aprobación de Pieter Schepmans como Director de cotizaciones del la región NAFTA.</description>
        <label>Director Approval</label>
        <name>Director_Approval</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Update_Aux_Field_Quote_Aprove_True</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>felipe.smith@sqm.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>Unanimous</whenMultipleApprovers>
        </assignedApprover>
        <label>Commercial VP</label>
        <name>Commercial_VP</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>Aprobación quotes spot para la región EMEAI &amp; AMERICAS Nivel Vicepresidente Comercial, solicitadas por rol SM EMEAI &amp; Americas Litio del mercado de Baterías.</description>
    <emailTemplate>unfiled$public/Quote_Review_Submit_Quote</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>((1 OR 2) OR (6 AND 7)) AND 3 AND 8 AND (4 OR 5)</booleanFilter>
        <criteriaItems>
            <field>SBQQ__Quote__c.OnSpec_Discount_Senior_Director__c</field>
            <operation>greaterThan</operation>
            <value>0</value>
        </criteriaItems>
        <criteriaItems>
            <field>SBQQ__Quote__c.OffSpec_Discount_Senior_Director__c</field>
            <operation>greaterThan</operation>
            <value>0</value>
        </criteriaItems>
        <criteriaItems>
            <field>SBQQ__Quote__c.Product__c</field>
            <operation>contains</operation>
            <value>Lithium</value>
        </criteriaItems>
        <criteriaItems>
            <field>SBQQ__Quote__c.Type_of_Opportunity__c</field>
            <operation>notContain</operation>
            <value>Formula</value>
        </criteriaItems>
        <criteriaItems>
            <field>SBQQ__Quote__c.Type_of_Opportunity__c</field>
            <operation>notContain</operation>
            <value>Fixed</value>
        </criteriaItems>
        <criteriaItems>
            <field>SBQQ__Quote__c.SBQQ__NetAmount__c</field>
            <operation>greaterThan</operation>
            <value>&quot;USD 7,500,000&quot;</value>
        </criteriaItems>
        <criteriaItems>
            <field>SBQQ__Quote__c.SBQQ__NetAmount__c</field>
            <operation>lessOrEqual</operation>
            <value>&quot;USD 15,000,000&quot;</value>
        </criteriaItems>
        <criteriaItems>
            <field>User.UserRole</field>
            <operation>equals</operation>
            <value>SM EMEAI &amp; Americas Lithium</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Email_Owner_Approved</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Aux_Field_Quote_Aprove_True</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Status_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Email_Notificaction_Denied</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Aux_Field_Quote_Approve_False</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Status_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>true</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Update_Date_Submited_9</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Status_Send_to_Approve</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>L EMEAI-NAFTA CVP Spot - Battery</label>
    <processOrder>6</processOrder>
    <recallActions>
        <action>
            <name>Update_Status_Draft</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
