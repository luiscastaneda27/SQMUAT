<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>CaseNumber</field>
        <field>Owner</field>
        <field>CreatedDate</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Helpdesk_case_approval_process_response</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Update_User_Approved_Field</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>CreatedBy</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Case.subject_issue__c</field>
                <operation>equals</operation>
                <value>Incidents,Question</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Approval Incident or Question Resolution</label>
        <name>Approval_Incident_or_Question_Resolution</name>
        <rejectionActions>
            <action>
                <name>Helpdesk_case_approval_process_response</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Update_In_production_Field</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Update_Status_In_Progress</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Update_Sub_Status_for_Rejection</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Helpdesk_case_approval_process_response</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Update_Status</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Update_Sub_Status_Closed_Completed</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Update_User_Approved_Field</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>CreatedBy</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Case.subject_issue__c</field>
                <operation>equals</operation>
                <value>Improvements</value>
            </criteriaItems>
        </entryCriteria>
        <label>Approval Improvement Solution</label>
        <name>Approval_Improvement_Solution</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>Helpdesk_case_approval_process_response</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Update_Attached_Documentation_Field</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Update_DEV_Configurations_Field</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Update_In_production_Field</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Update_Status_In_Progress</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Update_Sub_Status_DEV_Setting</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Update_UAT_Configuration_Field</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>Process to validate solution implemented in production by user who creates</description>
    <emailTemplate>unfiled$public/Request_Approval</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Case.RecordType</field>
            <operation>equals</operation>
            <value>Helpdesk</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.subject_issue__c</field>
            <operation>equals</operation>
            <value>Incidents,Question,Improvements</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.Status</field>
            <operation>equals</operation>
            <value>Validation</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.Sub_estado__c</field>
            <operation>equals</operation>
            <value>Validación Producción</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.In_Production__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Update_User_Approved_Date</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Update_Finish_Development_Date</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Helpdesk Final Approval</label>
    <processOrder>18</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
