<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>Quality</submitter>
        <type>roleSubordinatesInternal</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Causa_raiz_Encontrada__c</field>
        <field>Fecha_inicio_IC__c</field>
        <field>Fecha_fin_IC__c</field>
        <field>Ingeniero_de_Calidad__c</field>
        <field>Informe_Cliente_adjuntado__c</field>
        <field>Informe_investigacion_adjuntado__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>andres.pena.toledo@sqm.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Approval request send to Quality Manager Lithium</description>
        <label>Quality Manager Lithium</label>
        <name>Quality_Manager_Lithium</name>
    </approvalStep>
    <description>Para casos externos relacionados a Litio, en etapa &quot;Segunda Revisión&quot;, con estatus revisión 1 aprobado, con status revisión 2 distinto de aprobado y distinto a rechazado.
La solicitud de aprobación puede ser solicitada por el Case Owner o usuario de Calidad.</description>
    <emailTemplate>unfiled$public/Investigation_SendToApproval</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 AND 2 AND 3 AND (4 OR 7) AND 5 AND 6</booleanFilter>
        <criteriaItems>
            <field>Informe_de_Investigacion__c.Etapa__c</field>
            <operation>equals</operation>
            <value>2da Revisión</value>
        </criteriaItems>
        <criteriaItems>
            <field>Informe_de_Investigacion__c.Estatus_Revision_2__c</field>
            <operation>notEqual</operation>
            <value>Aprobado</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.BusinessLine__c</field>
            <operation>contains</operation>
            <value>Lithium</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.RecordType</field>
            <operation>equals</operation>
            <value>External Quality Claims</value>
        </criteriaItems>
        <criteriaItems>
            <field>Informe_de_Investigacion__c.Estatus_Revision_2__c</field>
            <operation>notEqual</operation>
            <value>Rechazado</value>
        </criteriaItems>
        <criteriaItems>
            <field>Informe_de_Investigacion__c.Estatus_Revision_1__c</field>
            <operation>equals</operation>
            <value>Aprobado</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.RecordType</field>
            <operation>equals</operation>
            <value>Reclamos Calidad</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Actualiza_Estatus2_Aprobado</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Aprobacion_2_Investigacion</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Etapa_Aceptado</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Generacion_de_acciones</name>
            <type>Task</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Actualiza_Estatus2_rechazado</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Actualiza_Etapa_Rechazado2</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Rechazo_2_Investigacion</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Actualiza_Estatus2_Enviado</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Investigacion_necesita_aprobacion_Parte_II</name>
            <type>Alert</type>
        </action>
    </initialSubmissionActions>
    <label>L_ExternalCases_Rev2 v2</label>
    <processOrder>2</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
