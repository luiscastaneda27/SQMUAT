<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>CaseNumber</field>
        <field>Owner</field>
        <field>Subject</field>
        <field>Faena__c</field>
        <field>Localidad__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Aprobaci_n_informe_cliente</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Caso_Aprobado</name>
                <type>Task</type>
            </action>
            <action>
                <name>Sub_estado_reporte_aprobado</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>pablo.pisani@sqm.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Aprobación reporte a cliente</label>
        <name>Aprobacion_reporte_a_cliente</name>
        <rejectionActions>
            <action>
                <name>Caso_Rechazado</name>
                <type>Task</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>Para casos de Comunidad Pampa asociados a algunas de las siguientes localidades, en estado &quot;En reporte a cliente&quot;. Solicitud de aprobación realizada por el Case Owner.

Localidades: Victoria, Colonia de Pintados, La Tirana, Pozo Almonte, Huatacondo, Tamentíca, Alto Hospicio, Iquique, Chanavayita, Cañamo, Caramucho, Quillagua, Caleta Buena, María Elena, Tocopilla, Calama</description>
    <emailTemplate>unfiled$public/Community_Request_Approval</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Case.RecordType</field>
            <operation>equals</operation>
            <value>Comunidad</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.Status</field>
            <operation>equals</operation>
            <value>Reported to costumer</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.Localidad__c</field>
            <operation>equals</operation>
            <value>Alto Hospicio,Antofagasta,Calama,Caleta Buena,Cañamo,Caramucho,Chanavayita,Colonia de Pintados,Huatacondo,Iquique,La Tirana,María Elena,Pozo Almonte,Quillagua,Tamentíca,Tocopilla,Victoria</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Community_Approval_Case</name>
            <type>Alert</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Community_Rejected_Case</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Sub_estado_volver_cliente</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Sub_estado_aprobaci_n_reporte_cliente</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>C_Pampa_CustomerReport</label>
    <processOrder>12</processOrder>
    <recallActions>
        <action>
            <name>Sub_estado_volver_cliente</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
