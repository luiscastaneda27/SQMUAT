<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>CaseNumber</field>
        <field>Owner</field>
        <field>Monto_estimado_a_compensar__c</field>
        <field>Monto_a_Compensar__c</field>
        <field>Type</field>
        <field>Subtype__c</field>
        <field>Reason</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>gonzalo.naranjo@sqm.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Case.Monto_a_Compensar__c</field>
                <operation>greaterThan</operation>
                <value>&quot;USD 50,000&quot;</value>
            </criteriaItems>
            <criteriaItems>
                <field>Case.Monto_a_Compensar__c</field>
                <operation>lessOrEqual</operation>
                <value>&quot;USD 150,000&quot;</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Between 50k USD and 150k USD</label>
        <name>Between_50k_USD_and_150k_USD</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>beatriz.oelckers@sqm.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Case.Monto_a_Compensar__c</field>
                <operation>greaterThan</operation>
                <value>&quot;USD 150,000&quot;</value>
            </criteriaItems>
        </entryCriteria>
        <label>More than 150k USD</label>
        <name>More_than_150k_USD</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>Para casos relacionados al producto Yodo que requieran compensación, se valida que la compensación haya sido aprobada, en caso de que el monto así lo requiera (sobre 50k USD). La solicitud de aprobación puede ser realizada por el Case Owner.</description>
    <emailTemplate>unfiled$public/Case_Send_To_Approval</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Case.Requiere_Compensacion__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.Compensacion_Aprobada__c</field>
            <operation>equals</operation>
            <value>False</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.Requiere_Aprobacion__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.BusinessLine__c</field>
            <operation>equals</operation>
            <value>Iodine</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>ApruebaCompensacion</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Compensacion_Aprobada</name>
            <type>Alert</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Compensacion_Rechazada</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Compensacion_necesita_aprobacion</name>
            <type>Alert</type>
        </action>
    </initialSubmissionActions>
    <label>I_compensation</label>
    <processOrder>5</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
