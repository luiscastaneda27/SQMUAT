<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Date_submit__c</field>
        <field>Created_Date__c</field>
        <field>Opportunity_Grades__c</field>
        <field>Owner</field>
        <field>Volume__c</field>
        <field>SBQQ__Account__c</field>
        <field>SBQQ__NetAmount__c</field>
        <field>Type_of_Opportunity__c</field>
        <field>Average_Price__c</field>
        <field>Incoterm__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>pieter.schepmans@sqm.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>Unanimous</whenMultipleApprovers>
        </assignedApprover>
        <label>Director</label>
        <name>Director</name>
    </approvalStep>
    <description>Approval flow for Quotes based on Formula and Fixed contracts - approval by Director</description>
    <emailTemplate>unfiled$public/Quote_Review_Submit_Quote</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>(1 OR 2 OR 3 OR 7 OR 8) AND (4 OR 5) AND 6</booleanFilter>
        <criteriaItems>
            <field>User.UserRole</field>
            <operation>equals</operation>
            <value>C SM and SC Americas Lithium</value>
        </criteriaItems>
        <criteriaItems>
            <field>User.UserRole</field>
            <operation>equals</operation>
            <value>SC EMEAI Lithium</value>
        </criteriaItems>
        <criteriaItems>
            <field>User.UserRole</field>
            <operation>equals</operation>
            <value>SM South Africa Lithium</value>
        </criteriaItems>
        <criteriaItems>
            <field>SBQQ__Quote__c.Type_of_Opportunity__c</field>
            <operation>contains</operation>
            <value>Formula</value>
        </criteriaItems>
        <criteriaItems>
            <field>SBQQ__Quote__c.Type_of_Opportunity__c</field>
            <operation>contains</operation>
            <value>Fixed</value>
        </criteriaItems>
        <criteriaItems>
            <field>SBQQ__Quote__c.Product__c</field>
            <operation>contains</operation>
            <value>Lithium</value>
        </criteriaItems>
        <criteriaItems>
            <field>User.UserRole</field>
            <operation>equals</operation>
            <value>SM Americas Lithium</value>
        </criteriaItems>
        <criteriaItems>
            <field>User.UserRole</field>
            <operation>equals</operation>
            <value>C SM EMEAI Lithium</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Email_Owner_Approved</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Aux_Field_Quote_Aprove_True</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Status_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Email_Notificaction_Denied</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Aux_Field_Quote_Approve_False</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Status_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>true</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Update_Date_Submited_9</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Status_Send_to_Approve</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>L EMEAI-NAFTA D Formula &amp; fixed</label>
    <processOrder>11</processOrder>
    <recallActions>
        <action>
            <name>Update_Status_Draft</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
