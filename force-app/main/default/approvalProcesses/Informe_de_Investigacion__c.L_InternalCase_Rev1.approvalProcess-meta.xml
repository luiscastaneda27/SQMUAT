<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>Quality</submitter>
        <type>roleSubordinatesInternal</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Causa_raiz_Encontrada__c</field>
        <field>Fecha_inicio_IC__c</field>
        <field>Fecha_fin_IC__c</field>
        <field>Ingeniero_de_Calidad__c</field>
        <field>Informe_Cliente_adjuntado__c</field>
        <field>Informe_investigacion_adjuntado__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>claudia.gutierrez@sqm.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Head of Quality Management Lithium</label>
        <name>Head_of_Quality_Management_Lithium</name>
    </approvalStep>
    <description>Para casos internos relacionados a Litio, en etapa &quot;Generación de Informe&quot; sin revisión de estado 1 y con reporte de investigación adjunto.
La solicitud de aprobación puede ser solicitada por el Case Owner o usuario de Calidad.</description>
    <emailTemplate>unfiled$public/Investigation_SendToApproval</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 AND 2 AND 3 AND 4 AND 5</booleanFilter>
        <criteriaItems>
            <field>Informe_de_Investigacion__c.Etapa__c</field>
            <operation>equals</operation>
            <value>Generación de informe</value>
        </criteriaItems>
        <criteriaItems>
            <field>Informe_de_Investigacion__c.Estatus_Revision_1__c</field>
            <operation>notEqual</operation>
            <value>Aprobado</value>
        </criteriaItems>
        <criteriaItems>
            <field>Informe_de_Investigacion__c.Informe_investigacion_adjuntado__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.BusinessLine__c</field>
            <operation>notEqual</operation>
            <value>Iodine</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.RecordType</field>
            <operation>notEqual</operation>
            <value>External Quality Claims</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Actualiza_Estatus1_Aprobado</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Aprobacion_1_Investigacion</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Avanza_a_2da_revision</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Actualiza_Estatus1_Rechazado</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Actualiza_Etapa_Rechazado</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Rechazo_1_Investigacion</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Actualiza_Estatus1_Enviado</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>ActualizaEtapa</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>FechaFinIC</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Investigacion_necesita_aprobacion</name>
            <type>Alert</type>
        </action>
    </initialSubmissionActions>
    <label>L_InternalCase_Rev1</label>
    <processOrder>3</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
