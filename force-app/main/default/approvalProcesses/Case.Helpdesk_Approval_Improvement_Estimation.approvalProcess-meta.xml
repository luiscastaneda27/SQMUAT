<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>CaseNumber</field>
        <field>Owner</field>
        <field>CreatedDate</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Helpdesk_Admin</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Approval of Improvement Effort Estimation</label>
        <name>Approval_of_Improvement_Effort_Estimation</name>
    </approvalStep>
    <description>Process to review Estimation cases Improvement Category</description>
    <emailTemplate>unfiled$public/HelpdeskRequestForInternalApprovalImprovement</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Case.RecordType</field>
            <operation>equals</operation>
            <value>Helpdesk</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.subject_issue__c</field>
            <operation>equals</operation>
            <value>Improvements</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.Status</field>
            <operation>equals</operation>
            <value>On Hold</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.Sub_estado__c</field>
            <operation>equals</operation>
            <value>En estimaci√≥n</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.Estimated_Effort__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Case.Is_Priorized__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Helpdesk_case_approval_process_response</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Effort_Estimate_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Estimation_Approved_Date</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Status_In_Progress</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Sub_Status_DEV_Setting</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Helpdesk_case_approval_process_response</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Effort_Estimate_Rejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Status_On_Hold</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Sub_Status_In_Estimation</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Update_Effort_Estimate_send_approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Sub_Status_Approval_Estimation</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Helpdesk Approval Improvement Estimation</label>
    <processOrder>15</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
