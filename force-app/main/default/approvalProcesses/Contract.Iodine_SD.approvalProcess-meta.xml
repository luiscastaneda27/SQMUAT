<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>ContractNumber</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>juan.pablo.bellolio@sqm.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>Unanimous</whenMultipleApprovers>
        </assignedApprover>
        <label>Step 1</label>
        <name>Step_1</name>
    </approvalStep>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>((1 AND 2 AND 3) AND (4 OR 5 OR 6 OR 7)) OR ((1 AND 8 AND 9 AND 10))</booleanFilter>
        <criteriaItems>
            <field>Contract.Product__c</field>
            <operation>equals</operation>
            <value>Iodine</value>
        </criteriaItems>
        <criteriaItems>
            <field>Contract.Contracted_volume__c</field>
            <operation>greaterThan</operation>
            <value>24</value>
        </criteriaItems>
        <criteriaItems>
            <field>Contract.Contracted_volume__c</field>
            <operation>lessOrEqual</operation>
            <value>500</value>
        </criteriaItems>
        <criteriaItems>
            <field>User.UserRole</field>
            <operation>equals</operation>
            <value>SM Iodine - Asia</value>
        </criteriaItems>
        <criteriaItems>
            <field>User.UserRole</field>
            <operation>equals</operation>
            <value>SM Iodine - NAFTA</value>
        </criteriaItems>
        <criteriaItems>
            <field>User.UserRole</field>
            <operation>equals</operation>
            <value>Support manager Iodine</value>
        </criteriaItems>
        <criteriaItems>
            <field>User.UserRole</field>
            <operation>equals</operation>
            <value>SM South Africa Lithium</value>
        </criteriaItems>
        <criteriaItems>
            <field>Contract.Contracted_volume__c</field>
            <operation>greaterThan</operation>
            <value>100</value>
        </criteriaItems>
        <criteriaItems>
            <field>Contract.Contracted_volume__c</field>
            <operation>lessOrEqual</operation>
            <value>500</value>
        </criteriaItems>
        <criteriaItems>
            <field>User.UserRole</field>
            <operation>equals</operation>
            <value>Director Iodine - EMEAI</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Update_Aux_Field_Contract_Approve_True</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Status_Activate</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Update_Aux_Field_Contract_Approve_False</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Status_Lost</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Update_Status_Send_to_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Iodine SD</label>
    <processOrder>8</processOrder>
    <recallActions>
        <action>
            <name>Update_Status_Draft</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
